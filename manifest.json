{
  "name": "Hacky Times",
  "version": "1.0",
  "description": "Music on the go!",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "background_page": "index.html",
  "permissions": ["declarativeContent", "storage"],
  "page_action": {
    "default_popup": "index.html"
  }
}